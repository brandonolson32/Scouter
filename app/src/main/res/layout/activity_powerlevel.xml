<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45B649" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statreader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5C5C5C"
            android:text="this will read some stats"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/powerlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="monospace"
            android:gravity="right|center_vertical"
            android:inputType="textPersonName"
            android:text="powerlevel"
            android:textColor="#3656F4"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/reading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.8" />

        <TextView
            android:id="@+id/characterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="82dp"
            android:gravity="fill_vertical"
            android:text="charname"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/reading"
            app:layout_constraintRight_toRightOf="@id/reading"
            app:layout_constraintHorizontal_bias="0.8" />

        <ImageView
            android:id="@+id/allcharacters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:baselineAlignBottom="true"
            android:scaleType="fitEnd"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/allcharacters" />

        <ImageView
            android:id="@+id/reading"
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:alpha=".4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statreader"
            app:srcCompat="@drawable/scouterreading" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>